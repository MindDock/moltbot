# Moltbot China Deployment Configuration
# 复制此文件为 deploy-china.env 并填写你的配置
# 使用: source deploy-china.env && ./scripts/deploy-china.sh <server_ip>

# ============== DeepSeek 配置 ==============
export DEEPSEEK_API_KEY="sk-your-deepseek-api-key"
export DEEPSEEK_MODEL="deepseek/deepseek-chat"  # 或 deepseek/deepseek-reasoner

# ============== 飞书配置 ==============
export FEISHU_APP_ID="cli_xxxxxxxx"
export FEISHU_APP_SECRET="your-app-secret"
export FEISHU_VERIFICATION_TOKEN="your-verification-token"
export FEISHU_ENCRYPT_KEY=""  # 可选，消息加密密钥
export FEISHU_ALLOW_FROM="ou_xxxxx,ou_yyyyy"  # 允许的用户 open_id，逗号分隔

# ============== Gateway 配置 ==============
export GATEWAY_PORT="18789"
export GATEWAY_TOKEN=""  # 留空则自动生成

# ============== SSH 配置 ==============
export SSH_USER="ubuntu"
export SSH_KEY=""  # 可选，SSH 私钥路径，如 ~/.ssh/id_rsa
